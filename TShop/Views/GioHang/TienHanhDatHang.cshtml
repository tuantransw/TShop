@using TShop.Models
@model KHACHHANG
@{
    ViewBag.Title = "TienHanhDatHang";
    Layout = "~/Views/Shared/Layout/_HomeLayout.cshtml";

    List<ITEMGIOHANG> GioHang = ViewBag.GioHang;
}


<!--checkout process area start-->
<div class="checkout-page-area pt50 pb50">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 col-md-9 col-12">
                <div class="form-title">
                    <h2 style="border-bottom: 1px solid #ededed;margin: 0;padding-bottom: 20px;margin-top: -30px;">
                        Đặt hàng
                    </h2>
                </div>
                <div class="accordion" id="accordionExample">
                    <div class="card sauget-accordion">
                        <div class="card-header" id="heading1">
                            <h4 class="card-title">
                                <a data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    <span>1</span> Thông tin khách hàng
                                </a>
                            </h4>
                        </div>
                        <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                            <div class="card-body">
                                @using (Html.BeginForm("CapNhatThongTinKhachHang", "GioHang"))
                                {
                                    @Html.AntiForgeryToken()
                                <div class="form-fields">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.Hidden("MaKH", Model.MaKH)
                                    @Html.Hidden("TenKH", Model.TenKH)
                                    @Html.Hidden("Email", Model.Email)
                                  
                                    @Html.Hidden("SoDienThoai", Model.SoDienThoai)
                                    @Html.Hidden("MatKhau", Model.MatKhau)
                                  
                                    <p>
                                        <label style="font-size:1.65rem">Tên khách hàng:</label>
                                        <label>@Model.TenKH</label>
                                    </p>
                                    <p>
                                        <label style="font-size:1.65rem">Địa chỉ email:</label>
                                        <label>@Model.Email</label>
                                    </p>
                                    <p>
                                        <label style="font-size:1.65rem">Số điện thoại:</label>
                                        <label>@Model.SoDienThoai</label>
                                    </p>
                                    <p>
                                        <label style="font-size:1.65rem">Địa chỉ: </label>
                                        @Html.EditorFor(n => n.DiaChi)
                                        @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                                    </p>
                                    <div class="form-action">
                                        <input type="submit" value="Cập nhật">
                                    </div>
                                </div>
                                }

                                <div class="" style="text-align:center; margin-top:10px">
                                    <a href="#heading2" class="checkPageBtn">Tiếp tục</a>
                                </div>
                            </div>
                        </div>

                        <div class="card sauget-accordion">
                            <div class="card-header" id="heading2">
                                <h4 class="card-title">
                                    <a class="collapsed" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                        <span>2</span> Phí vận chuyển
                                    </a>
                                </h4>
                            </div>
                            <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordionExample">
                                <div class="card-body">
                                    <div class="shiping-method">
                                        <p>Phí vận chuyển được miễn phí trên toàn quốc</p>

                                        <div class="" style="text-align:center; margin-top:10px">
                                            <a href="#heading3" class="checkPageBtn">Tiếp tục</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card sauget-accordion">
                            <div class="card-header" id="heading3">
                                <h4 class="card-title">
                                    <a class="collapsed" data-toggle="collapse" data-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                                        <span>3</span> Phương thức thanh toán
                                    </a>
                                </h4>
                            </div>
                            <div id="collapseFour" class="collapse" aria-labelledby="headingFour" data-parent="#accordionExample">
                                <div class="card-body">
                                    <div class="checkout-option">
                                        <div class="method-input-box">
                                            <p>
                                                <input type="radio" checked="" value="check" name="payment">
                                                Thanh toán khi nhận hàng
                                            </p>
                                            <p style="margin-top:10px;">
                                                <input type="radio" value="card" name="payment">
                                                Thanh toán bằng thẻ tín dụng
                                            </p>
                                        </div>
                                        <div class="" style="text-align:center; margin-top:10px">
                                            <a href="#heading1" class="checkPageBtn">Tiếp tục</a>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-lg-3 col-md-3 col-12">
                <a class="button c_button" href="@Url.Action("DatHang","GioHang")" title="Đặt hàng" style="margin-left:85px;font-size: 23px;margin-top:30px;">
                    <span>Đặt hàng</span>
                </a>
            </div>
        </div>
    </div>
</div>
<!--checkout process area end-->
