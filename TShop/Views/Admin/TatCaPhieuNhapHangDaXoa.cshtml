@using TShop.Models
@using PagedList.Mvc;
@model PagedList.IPagedList<PHIEUNHAP>
@{
    ViewBag.Title = "TatCaPhieuNhapHangDaXoa";
    Layout = "~/Views/Shared/Layout/_AdminLayout.cshtml";
}

<div class="container-fluid">

    <!-- Page Heading -->
