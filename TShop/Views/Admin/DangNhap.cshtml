
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Đăng nhập Admin</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Content/LoginAdmin/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginAdmin/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginAdmin/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginAdmin/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginAdmin/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginAdmin/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginAdmin/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginAdmin/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginAdmin/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginAdmin/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/LoginAdmin/css/main.css">
    <!--===============================================================================================-->

    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-1.8.0.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.8.22/jquery-ui.js"></script>

    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">

    @*<style>
            * {
                font-family: 'Roboto', sans-serif;
            }
        </style>*@
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-t-50 p-b-90">
                @using (Html.BeginForm("DangNhap", "Admin", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login100-form validate-form flex-sb flex-w" }))
                {
                    @*<form class="login100-form validate-form flex-sb flex-w">*@
                    <span class="login100-form-title p-b-51" style="font-weight:600">
                        ADMIN
                    </span>


                    <div class="wrap-input100 validate-input m-b-16" data-validate="Nhập tên đăng nhập">
                        <input class="input100" type="text" id="nhapemail" name="username" placeholder="Email">
                        <span class="focus-input100"></span>
                    </div>


                    <div class="wrap-input100 validate-input m-b-16" data-validate="Nhập mật khẩu">
                        <input class="input100" type="password" name="pass" placeholder="Mật khẩu">
                        <span class="focus-input100"></span>
                    </div>

                    <div class="flex-sb-m w-full p-t-3 p-b-24">
                        <div class="contact100-form-checkbox">
                            <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                            <label class="label-checkbox100" for="ckb1">
                                Lưu
                            </label>
                        </div>

                        <div>
                            <a href="#" class="txt1">
                                Quên mật khẩu?
                            </a>
                        </div>
                    </div>
                    <span class="text-danger" id="thongbao">@ViewBag.ThongBao1</span>
                    <script>
                        $(document).ready(function () {
                            $("#nhapemail").click(function () {
                                $("#thongbao").hide();

                            });
                            $(".pass").click(function () {
                                $("#thongbao").hide();
                            });
                            $("#ckb1").click(function () {
                                $("#thongbao").hide();
                            });
                            $("#dangnhap").click(function () {
                                $("#thongbao").hide();
                            });
                        });
                    </script>
                    <div class="container-login100-form-btn m-t-17">
                        @*<button class="login100-form-btn">
                                Đăng nhập
                            </button>*@
                        <input id="dangnhap" class="login100-form-btn" type="submit" value="Đăng nhập" style="font-weight:300"/>
                    </div>

                    @*</form>*@
                }
            </div>
        </div>
    </div>


    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src="~/Content/LoginAdmin/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/LoginAdmin/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/LoginAdmin/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Content/LoginAdmin/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/LoginAdmin/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/LoginAdmin/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/Content/LoginAdmin/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/LoginAdmin/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/LoginAdmin/js/main.js"></script>

</body>
</html>
