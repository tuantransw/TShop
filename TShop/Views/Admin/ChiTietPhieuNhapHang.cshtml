@{
    IEnumerable<CHITIETPHIEUNHAP> ctpnh = (IEnumerable<CHITIETPHIEUNHAP>)ViewBag.listCTPNH;
}
@{
    ViewBag.Title = "ChiTietPhieuNhapHang";
    Layout = "~/Views/Shared/Layout/_AdminLayout.cshtml";
}




<style>
    .table-responsivea {
        display: block;
