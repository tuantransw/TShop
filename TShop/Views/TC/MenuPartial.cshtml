                                            <ul>
                                                @foreach (var item in Model)
                                                {
                                                    <li><a href="@Url.Action("SanPhamTheoLSP","SanPham",new {MaLSP=item.MaLSP})">@item.TenLSP</a></li>
                                                }
                                            </ul>
                                        </li>
                                        <li><a href="#">Thanh toán</a></li>
