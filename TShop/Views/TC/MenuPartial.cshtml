                                    {
                                        <div class="mega-catagory">
                                            <a  href="@Url.Action("SanPhamTheoLSP","SanPham",new {MaLSP=item.MaLSP})">
                                                <img src="@Url.Content("~/Content/Icon/"+ item.HinhAnh)" alt="" />
                                                <span>@item.TenLSP</span>
                                            </a>
                                            @*<a href="@Url.Action("SanPhamTheoLSP","SanPham",new {MaLSP=item.MaLSP})">
