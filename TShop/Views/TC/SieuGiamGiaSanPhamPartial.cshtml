@using TShop.Models;
@model IEnumerable<SANPHAM>
<aside>
    <div class="usefull-product-slide">
        <div class="area-title">
            <h3>Siêu giảm giá</h3>
        </div>
        <div class="total-usefull-product carousle-pagi common4 ">
            <!-- single-product start -->
            @foreach (var item in Model.Take(6))
            {
                <div class="col-xs-12">
                    <div class="single-product">
                        <div class="product-label">
                        </div>
                        <div class="product-img">
                            <a href="@Url.Action("ChiTietSanPham", "SanPham", new { MaSP = item.MaSP })">
                                <img alt="" src="@Url.Content("~/Content/HinhAnh/"+item.HinhAnh)" class="primary-image">
                            </a>
                        </div>
                        <div class="product-content">

                            <h2 class="product-name">
                                @{
                                    if (item.TenSP.Length < 23)
                                    {
                                        <a href="@Url.Action("ChiTietSanPham", "SanPham", new { MaSP = item.MaSP })">@item.TenSP</a>
                                    }
                                    else
                                    { <a href="@Url.Action("ChiTietSanPham", "SanPham", new { MaSP = item.MaSP })">@item.TenSP.Substring(0, 23)...</a>}
                                }
                            </h2>
                            <div class="rating">
                                <a href="#"><i class="fa fa-star"></i></a>
                                <a href="#"><i class="fa fa-star"></i></a>
                                <a href="#"><i class="fa fa-star"></i></a>
                                <a href="#"><i class="fa fa-star"></i></a>
                                <a href="#"><i class="fa fa-star-o"></i></a>
                            </div>
                            <div class="price-box">
                                <span class="new-price">@{var donGia = String.Format("{0:0,0 VNĐ}", item.DonGia);} @donGia</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
      
        </div>
    </div>
</aside>