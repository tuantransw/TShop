
@using TShop.Models
@using PagedList.Mvc;
@model PagedList.IPagedList<SANPHAM>
@{
    ViewBag.Title = "KetQuaTimKiem";
    Layout = "~/Views/Shared/Layout/_HomeLayout.cshtml";
}


<!-- main area start -->
<div class="main-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3 nopadding-right">
                @Html.Action("DanhMucSanPhamPartial", "LoaiSanPham")
                <!--aside 1 end-->


                @Html.Action("SieuGiamGiaSanPhamPartial", "TC")
                <!--aside 3 end-->
                @*<aside>
                    <div class="tag-area">
                        <div class="area-title">
                            <h3>Popular Tags</h3>
                        </div>
                        <ul class="aside-padd">
                            <li> <a href="#">html5</a></li>
                            <li> <a href="#">css3</a></li>
                            <li> <a href="#">Joomla</a></li>
                            <li> <a href="#">Jquery</a></li>
                            <li> <a href="#">css</a></li>
                            <li> <a href="#">Content</a></li>
                            <li> <a href="#">clothing</a></li>
                            <li> <a href="#">shoes</a></li>
                            <li> <a href="#">gifts</a></li>
                            <li> <a href="#">electronics</a></li>
                        </ul>
                    </div>
                </aside>*@
                <!--aside 4 end-->
                @Html.Action("DangKiNhanTinPartial", "TC")
                <!--aside 5 end-->
            </div>

            <!--col-md-3-->
            <div class="col-lg-9 col-md-9 nopadding-left mt-xs-30">
                <div class="ambit-key">
                    <div class="col-md-12 pt40">
                        <ol class="breadcrumbs">
                            <li class="home"><a href="@Url.Action("Index","TrangChu")" title="Về trang chủ">Trang chủ</a></li>
                            <li class="active">Tìm kiếm</li>
                        </ol>
                        <div class="shop-banner mt20 mb20">
                            <a href="#"><img src="~/Content/img/clothing.jpg" alt=""></a>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="shop-product-area">
                        <!-- area title start -->
                        <div class="col-sm-12">
                            <div class="area-title bdr">
                                <h2>Tìm kiếm</h2>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <!-- area title end -->
                        <!-- product area start-->
                        <div class="row row-margin2">
                            <!-- single-product start -->
                            @foreach (var item in Model)
                            {
                                <div class="col-xl-3 col-lg-4  col-md-6 col-sm-6 col-12  col-padd">
                                    <div class="single-product">
                                        <div class="product-label">
                                            @{ if (item.Moi == true)
                                                {<div class="new"></div> }
                                                else
                                                {<div class=""></div> }
                                            }
                                        </div>
                                        <div class="product-img">
                                            <a href="@Url.Action("ChiTietSanPham","SanPham",new {MaSP=item.MaSP})">
                                                <img class="primary-image" src="@Url.Content("~/Content/HinhAnh/"+item.HinhAnh)" alt="" />
                                            </a>
                                        </div>
                                        <div class="product-content">
                                            <h2 class="product-name">
                                                @{if (item.TenSP.Length < 18)
                                                    { <a href="@Url.Action("ChiTietSanPham", "SanPham", new { MaSP = item.MaSP })">@item.TenSP</a> }
                                                else
                                                {
                                                    string a = item.TenSP.Substring(0, 18) + "..."; <a href="@Url.Action("ChiTietSanPham", "SanPham", new { MaSP = item.MaSP })">@a</a> } }
                                            </h2>
                                            <div class="rating">
                                                <a href="#"><i class="fa fa-star"></i></a>
                                                <a href="#"><i class="fa fa-star"></i></a>
                                                <a href="#"><i class="fa fa-star"></i></a>
                                                <a href="#"><i class="fa fa-star"></i></a>
                                                <a href="#"><i class="fa fa-star-o"></i></a>
                                            </div>
                                            <div class="price-box">
                                                <span class="new-price">@{var donGia = String.Format("{0:0,0 VNĐ}", item.DonGia);} @donGia</span>
                                            </div>
                                        </div>
                                        <div class="product-content2">
                                            <h2 class="product-name">
                                                @{if (item.TenSP.Length < 18)
                                                    { <a href="@Url.Action("ChiTietSanPham", "SanPham", new { MaSP = item.MaSP })">@item.TenSP</a> }
                                                else
                                                {
                                                    string a = item.TenSP.Substring(0, 18) + "..."; <a href="@Url.Action("ChiTietSanPham", "SanPham", new { MaSP = item.MaSP })">@a</a> } }
                                            </h2>
                                            <div class="rating">
                                                <a href="#"><i class="fa fa-star"></i></a>
                                                <a href="#"><i class="fa fa-star"></i></a>
                                                <a href="#"><i class="fa fa-star"></i></a>
                                                <a href="#"><i class="fa fa-star"></i></a>
                                                <a href="#"><i class="fa fa-star-o"></i></a>
                                            </div>
                                            <div class="price-box">
                                                <span class="new-price">@donGia</span>
                                            </div>
                                            <div class="button-container">
                                                <a title="Mua ngay" href="#" class="button cart_button">
                                                    <span>Mua ngay</span>
                                                </a>
                                            </div>
                                        </div>
                                        <ul class="add-to-links">
                                            @*<li>
                                    <div class="wishlist">
                                        <a title="Thêm vào danh sách yêu thích" href="#" data-toggle="tooltip"><i class="fa fa-heart"></i></a>
                                    </div>
                                </li>*@
                                            <li>
                                                <div class="view-products">
                                                    <a title="Chi tiết sản phẩm" href="@Url.Action("ChiTietSanPham","SanPham",new {MaSP=item.MaSP})" data-toggle="tooltip" data-placement="top"><i class="fa fa-arrows-alt"></i></a>
                                                </div>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            }
                            <!-- single-product end -->

                        </div>
                    </div>
                    <!--shop product area end-->
                    <div class="col-lg-12">
                        <div class="pagination pt30">
                            <ul>
                                @for (int i = 1; i <= Model.PageCount; i++)
                                {
                                    if (i == Model.PageNumber)
                                    {
                                        <li class="pagination-active"><a title="@i" href="@Url.Action("KetQuaTimKiem","TimKiem",new {Page = i,@TuKhoa = ViewBag.TuKhoa})" class="">@i</a></li>
                                    }
                                    else
                                    {
                                        <li><a title="@i" href="@Url.Action("KetQuaTimKiem","TimKiem",new {Page = i,@TuKhoa = ViewBag.TuKhoa})" class="">@i</a></li>
                                    }


                                }
                            </ul>
                        </div>
                        <div class="dlink">
                            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
                            @*@Html.PagedListPager(Model, page => Url.Action("SanPhamTheoLSPVaNSX", new {Page = page,@MaLSP = ViewBag.MaLSP,@MaNSX = ViewBag.MaNSX}))*@
                        </div>
                    </div>
                    <!--brand crasoule-area-start-->
                    @Html.Action("ThuongHieuPartial", "TC")
                    <!--brand crasoule-area-end-->
                </div>
                <!--ambit-key-->
            </div>
            <!--col-md-9-->
        </div>
        <!--row-->
    </div>
    <!--container-->
</div>
<!-- main area end -->
